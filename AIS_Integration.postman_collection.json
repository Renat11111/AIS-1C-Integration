	"item": [
		{
			"name": "1. Create Sale (POST)",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.variables.set(\"msgId\", \"msg-\" + Math.random().toString(36).substring(7));",
							"pm.variables.set(\"timestamp\", Math.floor(Date.now() / 1000));"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "X-API-Key",
						"value": "{{apiKey}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"id\": \"{{msgId}}\",\n    \"method\": \"sale\",\n    \"timestamp\": {{timestamp}},\n    \"data\": {\n        \"SaleId\": \"SALE-ORDER-001\",\n        \"SaleDate\": \"2023-12-22T12:00:00Z\",\n        \"SaleInspectorId\": \"INSP-99\",\n        \"SaleMainAmount\": 1500.50,\n        \"SaleVatAmount\": 270.09,\n        \"SaleDetails\": [\n            {\n                \"SaleDetailId\": \"DET-001\",\n                \"SaleDetailPrice\": 500.00,\n                \"SaleDetailQuantity\": 2,\n                \"SaleDetailTotalAmount\": 1000.00,\n                \"ServiceName\": \"Consulting Service\"\n            },\n            {\n                \"SaleDetailId\": \"DET-002\",\n                \"SaleDetailPrice\": 250.25,\n                \"SaleDetailQuantity\": 2,\n                \"SaleDetailTotalAmount\": 500.50,\n                \"ServiceName\": \"Delivery\"\n            }\n        ],\n        \"ClientId\": \"CLIENT-777\",\n        \"ClientFullName\": \"OOO 'Test Company'\",\n        \"ClientVOENOrPassportNo\": \"1234567890\",\n        \"ClientPhone\": \"+994501234567\"\n    }\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/api/v1/data",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"data"
					]
				}
			},
			"response": []
		},
