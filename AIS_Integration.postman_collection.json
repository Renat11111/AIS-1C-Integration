{
	"info": {
		"_postman_id": "b6a7b8c9-d0e1-4f2a-9b3c-5d6e7f8a9b0c",
		"name": "AIS-1C Integration",
		"description": "Упрощенная коллекция для интеграции AIS -> 1C",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Create or Update Sale (POST)",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.variables.set(\"msgId\", \"msg-\" + Math.random().toString(36).substring(7));"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "X-API-Key",
						"value": "{{apiKey}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"id\": \"{{msgId}}\",\n    \"data\": {\n        \"SaleId\": 12345,\n        \"SaleDate\": \"2023-12-22T12:00:00Z\",\n        \"SaleMainAmount\": 1500.50,\n        \"SaleDetails\": [],\n        \"ClientId\": \"CLIENT-777\",\n        \"ClientFullName\": \"OOO 'Test Company'\"\n    }\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/api/v1/data",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"data"
					]
				}
			},
			"response": []
		},
		{
			"name": "2. Cancel Sale (DELETE)",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.variables.set(\"msgId\", \"msg-\" + Math.random().toString(36).substring(7));"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "X-API-Key",
						"value": "{{apiKey}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"id\": \"{{msgId}}\",\n    \"data\": {\n        \"SaleId\": 12345,\n        \"SalePayStatusId\": 4\n    }\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/api/v1/data",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"data"
					]
				}
			},
			"response": []
		},
		{
			"name": "3. Retry Failed Tasks (Admin)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "X-API-Key",
						"value": "{{apiKey}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/v1/queue/retry-failed",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"queue",
						"retry-failed"
					]
				}
			},
			"response": []
		},
		{
			"name": "4. Health Check",
			"request": {
				"method": "GET",
				"url": {
					"raw": "{{baseUrl}}/api/v1/health",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"health"
					]
				}
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8081",
			"type": "string"
		},
		{
			"key": "apiKey",
			"value": "secret-ais-token-123",
			"type": "string"
		}
	]
}